{% extends "main.html.twig" %}


{% block body %}


    <!--post-default-->
    <section class="section pt-55 ">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-8 mb-20">
                    <!--Post-single-->
                    {% for post in posts %}
                    <div class="post-single">
                        <div class="post-single-image">
                            <img src=" {{ post.postImage }} " alt="">
                        </div>
                        <div class="post-single-content">
                            
                            <h4>{{ post.postTitle }} </h4>
                            <div class="post-single-info">
                                <ul class="list-inline">
                                    <li><a href="author.html">{{ post.postAuthor }}</a> </li>
                                    <li class="dot"></li>
                                    <li>{{ post.postDate|date("d/m/Y") }}</li>
                                    <li class="dot"></li>
                                    <li>{{ comments|length }} comments</li>
                                </ul>
                            </div>
                        </div>

                        <div class="post-single-body">
                            {{ post.postText }}
                        </div>
                    </div> {% endfor %}<!--/-->


                    <!--widget-comments-->
                    <div class="widget mb-50">
                    {% for comment in comments %}
                        <div class="title">
                            <h5>{{ comments|length }} Comments</h5>
                        </div>
                        <ul class="widget-comments">
                            <li class="comment-item">
                                <img src="/img/user/1.jpg" alt="">
                                <div class="content">
                                    <ul class="info list-inline">
                                        <li>{{ comment.commentUsername }}</li>
                                        <li class="dot"></li>
                                        <li> {{ comment.commentDate|date("d/m/Y") }} </li>
                                    </ul>
                                    <p>{{ comment.commentText }}
                                    </p>
                                    <div><a href="#" class="link"> <i class="arrow_back"></i> Reply</a></div>
                                </div>
                            </li>
                        </ul>                
                        {% endfor %}


                        <!--Leave-comments-->
                        <div class="title">
                            <h5>Leave a Reply</h5>
                        </div>
                        <form class="widget-form" action="#" method="POST" id="main_contact_form">
                            <p>Your email adress will not be published ,Requied fileds are marked*.</p>
                            <div class="alert alert-success contact_msg" style="display: none" role="alert">
                                Your message was sent successfully.
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <textarea name="message" id="message" cols="30" rows="5" class="form-control" placeholder="Message*" required="required"></textarea>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <input type="text" name="name" id="name" class="form-control" placeholder="Name*" required="required">
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <input type="email" name="email" id="email" class="form-control" placeholder="Email*" required="required">
                                    </div>
                                </div>
                                <div class="col-12 mb-20">
                                    <div class="form-group">
                                        <input type="text" name="website" id="website" class="form-control" placeholder="website">
                                    </div>
                                    <label>
                                        <input name="name" type="checkbox" value="1" required="required"> 
                                        <span>save my name , email and website in this browser for the next time I comment.</span>                                   
                                    </label>
                                </div>
                                <div class="col-12">
                                    <button type="submit" name="submit" class="btn-custom">
                                        Post Comment
                                    </button>
                                </div> 
                            </div>
                        </form>
                    </div>
                </div>


                <div class="col-lg-4 max-width">
                    <!--widget-author-->
                    <div class="widget">
                        <div class="widget-author">
                            <a href="author.html" class="image">
                                <img src="/img/author/1.jpg" alt="">
                            </a>
                            <h6>
                                <span>Hi, I'm David Smith</span>
                            </h6>
                            <p>

                            I'm David Smith, husband and father ,
                            I love Photography,travel and nature. I'm working as a writer and blogger with experience
                            of 5 years until now.
                        </p>
                    
                    
                            <div class="social-media">
                                <ul class="list-inline">
                                    <li>
                                        <a href="#" class="color-facebook">
                                            <i class="fab fa-facebook"></i>
                                        </a>
                                    </li>
                                    <li>
                                        <a href="#" class="color-instagram">
                                            <i class="fab fa-instagram"></i>
                                        </a>
                                    </li>
                                    <li>
                                        <a href="#" class="color-twitter">
                                            <i class="fab fa-twitter"></i>
                                        </a>
                                    </li>
                                    <li>
                                        <a href="#" class="color-youtube">
                                            <i class="fab fa-youtube"></i>
                                        </a>
                                    </li>
                                    <li>
                                        <a href="#" class="color-pinterest">
                                            <i class="fab fa-pinterest"></i>
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <!--/-->

                    <!--widget-latest-posts-->
                    <div class="widget ">
                        <div class="section-title">
                            <h5>Latest Posts</h5>
                        </div>
                        <ul class="widget-latest-posts">
                            {% for lastPost in lastPosts %}
                            <li class="last-post">
                                <div class="image">
                                    <a href="post-default.html">
                                        <img src="/img/latest/1.jpg" alt="...">
                                    </a>
                                </div>
                                <div class="nb">1</div>
                                <div class="content">
                                    <p>
                                        <a href="post-default.html">{{ lastPost.postTitle }}</a>
                                    </p>
                                    <small>
                                        <span class="icon_clock_alt"></span> {{ lastPost.postDate|date("d/m/Y") }}</small>
                                </div>
                            </li>
                            {% endfor %}
                        </ul>
                    </div>
                    <!--/-->
                </div> 
            </div>
        </div>
    </section><!--/-->


{% endblock %}