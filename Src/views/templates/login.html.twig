{% extends "main.html.twig" %}


{% block body %}


    <!--Login-->
    <section class="section pt-55 mb-50">
        <div class="container">
            <div class="sign widget">
                <div class="section-title">
                    <h5>Connexion</h5>
                </div>
                <form  action="/login" class="sign-form widget-form " method="post">
                        <div class="form-group">
                        <input required type="text" class="form-control" placeholder="Identifiant*" name="username" value="">
                    </div>
                    <div class="form-group">
                        <input required type="password" class="form-control" placeholder="Mot de passe*" name="password" value="">
                    </div>
                    
                    <div class="form-group">
                        <button type="submit" class="btn-custom">Connexion</button>
                    </div>
                    
                    <p class="form-group text-center">Vous n'avez pas de compte ? <a href="/register" class="btn-link">Inscrivez-vous !</a> </p>
                    </br>
                    <center><i><b>{{ error }}</b></i></center>
                </form>
            </div> 
        </div>
    </section>    
        
{% endblock %}