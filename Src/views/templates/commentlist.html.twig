{% extends "maindashboard.html.twig" %}


{% block body %}



<main class="main-content position-relative max-height-vh-100 h-100 border-radius-lg ">   
    <div class="container-fluid py-4">
        <div class="row">
            <div class="col-12">
                <div class="card my-4">
                    <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                        <div class="bg-gradient-primary shadow-primary border-radius-lg pt-4 pb-3">
                            <h6 class="text-white text-capitalize ps-3">Commentaires</h6>
                        </div>
                    </div>
                    
                    <div class="row">
        <div class="col-md-12 mt-6">
            <div class="card">
            <div class="card-header pb-0 px-0">
            </div>
            <div class="card-body pt-4 p-3">
            {% for comment in comments %}
                <ul class="list-group">
                <li class="list-group-item border-0 d-flex p-4 mb-2 bg-gray-100 border-radius-lg">
                    <div class="d-flex flex-column">
                    <h6 class="mb-3 text-sm">{{ comment.commentUsername }}</h6>
                    <span class="mb-2 text-xs">Date : <span class="text-dark font-weight-bold ms-sm-2">{{ comment.commentDate|date("d/m/Y") }}</span></span>
                    <span class="mb-2 text-xs">Adresse mail : <span class="text-dark ms-sm-2 font-weight-bold">{{ comment.commentMail }}</span></span>
                    <span class="text-xs">Commentaire : <span class="text-dark ms-sm-2 font-weight-bold">{{ comment.commentText  }}</span></span>
                    </div>
                    <div class="ms-auto text-end">
                    <form class="form-horizontal" action="/deletecommentlist/{{ comment.id }}" method="post">
                    <input type="hidden" name="commentId" value=" {{ comment.id }} " />
                            <br />
                        <div class="form-actions">
                    <button type="submit" class="btn btn-danger" name="delete">Supprimer</button>
                    </div>
                    </form>
                    </div>
                </li>

                {% endfor %}
                </ul>
            </div>
            </div>
        </div>



    </main>





{% endblock %}