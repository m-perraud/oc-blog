{% extends "main.html.twig" %}



{% block body %}

        <!--masonry-layout-->
    <section class="section masonry-layout pt-45">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card-columns">
                        <div> {% for post in posts %} 
                            <div class="card">
                                <div class="post-card">
                                    <div class="post-card-image">
                                        <a href="/posts/{{ post.id }}">
                                            <img src="/img/posts/{{ post.postImage }}" alt="">
                                        </a>
                                    </div>
                                <div class="post-card-content">
                                    <a href="/posts/{{ post.id }}" class="categorie"> {{ post.postTitle }}</a>
                                        <h5>
                                            <a href="/posts/{{ post.id }}"></a>
                                        </h5>
                                            <p>{{ post.postChapo }}
                                            </p>
                                <div class="post-card-info">
                                    <ul class="list-inline">
                                        <li>
                                            <a href="author.html"></a>
                                        </li>
                                        <li>
                                            <a href="/posts/{{ post.id }}">{{ post.adminLogin }}</a>
                                        </li>
                                        <li class="dot"></li>
                                        <li>{{ post.postDate|date("d/m/Y") }}</li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
            {% endfor %}
                </div>
            </div>


                <!--pagination-->
                <div class="pagination mt-30">
                <ul class="list-inline">
                {% for page in 1.. pages %} 
                    
                        <li class="active">
                            <a href="/allposts?page={{ page }}">{{ page }}</a>
                        </li>
                    
                    {% endfor %}
                    </ul>
                </div>
            </div>
        </div>
    </div>
    </section>
    <!--/-->


{% endblock %}